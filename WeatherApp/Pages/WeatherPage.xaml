<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Pages.WeatherPage"
             Title="Weather">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="10">
        <Label x:Name="TemperatureLabel" Text="Temperature: -" FontSize="Large" HorizontalOptions="Center" />
        <Label x:Name="DescriptionLabel" Text="Condition: -" FontSize="Large" HorizontalOptions="Center" />
        <Label x:Name="HumidityLabel" Text="Humidity: -" FontSize="Large" HorizontalOptions="Center" />

        <Button Text="Refresh" Clicked="BtnRefreshWeather_Clicked" BackgroundColor="#6200EE" TextColor="White" CornerRadius="10"/>
    </StackLayout>


</ContentPage>